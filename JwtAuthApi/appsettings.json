{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "MyVerySecretKeyThatIsAtLeast256BitsLongForSecurity123456789",
    "Issuer": "JwtAuthApi",
    "Audience": "JwtAuthApiUsers",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "AppSettings": {
    "ApplicationName": "JWT Auth API Enterprise",
    "Version": "2.0.0",
    "EnableDetailedErrors": true,
    "EnableRequestLogging": true,    "Cors": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://localhost:8080",
        "http://localhost:5000",
        "https://localhost:5001"
      ],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "AllowCredentials": true
    }
  }
}
